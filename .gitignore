<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anhƒê·ªãnhCheat</title>
  <style>
    body {
      margin: 0;
      font-family: "Segoe UI", Arial, sans-serif;
      background: radial-gradient(circle at top, #1e293b, #0f172a 70%); /* n·ªÅn xanh ƒëen m·ªÅm */
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
      padding: 50px 20px;
      position: relative;
      overflow: hidden;
    }
    h1 {
      font-size: 2.4rem;
      margin-bottom: 12px;
      color: #a78bfa;
      text-align: center;
      font-weight: bold;
    }
    h2 {
      font-size: 1rem;
      font-weight: 400;
      margin-bottom: 30px;
      text-align: center;
      color: #9ca3af;
    }
    .item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 280px;
      margin: 14px 0;
      padding: 10px 0;
    }
    .label {
      font-size: 1.1rem;
      font-weight: 600;
      text-shadow: 0 0 6px #000;
    }
    /* N√∫t LED */
    .led {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      background: #1e293b;
      border: 2px solid #2563eb;
      cursor: pointer;
      transition: all .25s ease;
      box-shadow: inset 0 0 6px #000;
    }
    .led.active {
      background: radial-gradient(circle at 30% 30%, #ffcccc, #ef4444);
      border-color: #f87171;
      box-shadow: 0 0 10px #ef4444, 0 0 22px #ef4444cc;
    }
    /* Slider AimLock */
    .slider-wrap {
      width: 280px;
      margin-top: 10px;
      position: relative;
    }
    .slider {
      width: 100%;
      appearance: none;
      height: 10px;
      border-radius: 6px;
      background: linear-gradient(90deg, #22c55e 0%, #22c55e 0%, #064e3b 0%);
      outline: none;
      cursor: pointer;
      transition: background 0.3s ease;
      position: relative;
      z-index: 2;
    }
    .slider::-webkit-slider-thumb {
      appearance: none;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: #fff;
      border: 2px solid #10b981;
      cursor: pointer;
      box-shadow: 0 0 10px #10b981aa;
      transition: all .2s;
    }
    .slider::-webkit-slider-thumb:hover {
      transform: scale(1.2);
    }
    /* Khu v·ª±c hi·ªÉn th·ªã */
    .stage {
      margin-top: 40px;
      width: 100%;
      max-width: 340px;
      min-height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fef9c3;
      font-size: 1rem;
      text-align: center;
      padding: 12px;
      text-shadow: 0 0 6px #000;
    }
    /* Upload file */
    .upload {
      margin-top: 30px;
      text-align: center;
    }
    .upload label {
      display: block;
      margin-bottom: 10px;
      font-weight: bold;
    }
    .upload input[type="file"] {
      display: none;
    }
    .custom-btn {
      padding: 10px 18px;
      border: none;
      border-radius: 6px;
      background: #2563eb;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s;
    }
    .custom-btn:hover {
      background: #1e40af;
    }
  </style>
</head>
<body>
  <h1>AnhKy</h1>
  <h2>Menu tinh g·ªçn ‚Ä¢ ch·ªØ ƒë·∫πp ‚Ä¢ hi·ªáu ·ª©ng √™m m·∫Øt</h2>

  <div class="item">
    <span class="label">T√¢m ·∫£o</span>
    <div class="led" id="btn-tamao"></div>
  </div>

  <div class="item">
    <span class="label">Nh·∫π t√¢m</span>
    <div class="led" id="btn-nhetam"></div>
  </div>

  <div class="item">
    <span class="label">AimLock</span>
    <div class="led" id="btn-aimlock"></div>
  </div>
  <div class="slider-wrap">
    <input type="range" min="0" max="100" value="0" id="aim-slider" class="slider">
  </div>

  <div class="stage" id="stage">
    B·∫•m n√∫t ƒë·ªÉ k√≠ch ho·∫°t ch·ª©c nƒÉng
  </div>

  <!-- Upload file -->
  <div class="upload">
    <label for="fileInput">Ch·ªçn t·ªáp</label>
    <input type="file" id="fileInput">
    <button class="custom-btn" onclick="selectFile()">Ch·ªçn</button>
    <p id="fileStatus"></p>
  </div>

  <!-- √Çm thanh tia l·ª≠a ƒëi·ªán -->
  <audio id="electric-sound" src="https://www.fesliyanstudios.com/play-mp3/387" preload="auto"></audio>

  <script>
    const stage = document.getElementById("stage");
    const btnIllusion = document.getElementById("btn-tamao");
    const btnCalm = document.getElementById("btn-nhetam");
    const btnAim = document.getElementById("btn-aimlock");
    const aimSlider = document.getElementById("aim-slider");
    const electricSound = document.getElementById("electric-sound");
    const fileInput = document.getElementById("fileInput");
    const fileStatus = document.getElementById("fileStatus");

    // T√¢m ·∫£o
    btnIllusion.addEventListener("click", () => {
      btnIllusion.classList.toggle("active");
      stage.textContent = btnIllusion.classList.contains("active")
        ? "ƒêang b·∫≠t T√¢m ·∫£o üî¥"
        : "ƒê√£ t·∫Øt T√¢m ·∫£o";
    });

    // Nh·∫π t√¢m
    btnCalm.addEventListener("click", () => {
      btnCalm.classList.toggle("active");
      stage.textContent = btnCalm.classList.contains("active")
        ? "ƒêang b·∫≠t ch·∫ø ƒë·ªô Nh·∫π t√¢m üî¥"
        : "ƒê√£ t·∫Øt Nh·∫π t√¢m";
    });

    // AimLock
    btnAim.addEventListener("click", () => {
      btnAim.classList.toggle("active");
      checkAimLock();
    });
    aimSlider.addEventListener("input", () => {
      updateSliderGlow();
      checkAimLock();
    });

    function checkAimLock(){
      if(btnAim.classList.contains("active") && aimSlider.value == "100"){
        stage.textContent = "B·∫≠t AimLock Th√†nh C√¥ng ‚úÖ";
        electricSound.currentTime = 0;
        electricSound.play();
      } else if(btnAim.classList.contains("active")){
        stage.textContent = "AimLock: " + aimSlider.value + "%";
      } else {
        stage.textContent = "AimLock ƒëang t·∫Øt";
      }
    }

    // Hi·ªáu ·ª©ng ph√°t s√°ng cho slider
    function updateSliderGlow(){
      let val = aimSlider.value;
      let percent = val + "%";
      let color;
      if(val < 50){
        color = "#22c55e"; // xanh l√°
      } else if(val < 100){
        color = "#f59e0b"; // v√†ng cam
      } else {
        color = "#ef4444"; // ƒë·ªè r·ª±c
      }
      aimSlider.style.background = `linear-gradient(90deg, ${color} ${percent}, #064e3b ${percent})`;
      aimSlider.style.boxShadow = `0 0 12px ${color}aa`;
    }
    updateSliderGlow();

    // Upload file
    function selectFile(){
      if(fileInput.files.length > 0){
        fileStatus.textContent = "ƒê√£ ch·ªçn t·ªáp th√†nh c√¥ng ‚úÖ";
      } else {
        fileStatus.textContent = "Ch∆∞a ch·ªçn t·ªáp ‚ùå";
      }
    }
  </script>
</body>
</html>
